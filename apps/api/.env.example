# ============================================
# APPLICATION
# ============================================
NODE_ENV=development
PORT=3001
APP_NAME=CAFEelevate
APP_URL=http://localhost:3001

# ============================================
# DATABASE
# ============================================
DATABASE_URL=postgresql://cafeelevate:cafeelevate123@localhost:5432/cafeelevate

# ============================================
# AUTHENTICATION
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_REFRESH_EXPIRES_IN=7d

# ============================================
# SECURITY
# ============================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Rate limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=100
THROTTLE_SKIP_IPS=127.0.0.1

# Trusted proxies (comma-separated)
TRUSTED_PROXIES=127.0.0.1

# ============================================
# STORAGE
# ============================================
STORAGE_PROVIDER=local

# Local storage
UPLOAD_DIR=./uploads

# AWS S3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=
AWS_CLOUDFRONT_URL=

# Supabase
SUPABASE_URL=
SUPABASE_SERVICE_KEY=
SUPABASE_STORAGE_BUCKET=menu-images

# Upload limits
MAX_FILE_SIZE_MB=5

# ============================================
# REDIS (optional, for caching)
# ============================================
REDIS_URL=redis://localhost:6379

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=debug

# ============================================
# EXTERNAL SERVICES (optional)
# ============================================
# Sentry
SENTRY_DSN=

# Email
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@cafeelevate.com
